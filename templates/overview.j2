{% extends 'menu.html' %}
{% set active_page = 'hosts' %}

{% block content %}
<div class="container-fluid">
  <div class="row">

    <div class="col-md-3"></div>

    <div class="col-md-6">    
        <table class="table table-striped table-hover">
            {% for host in all_hosts %}
            <tr>
                <td>{{ host[1] }}</td>
                <td>{{ host[2] }}</td>
                <td><a href="{{ url_for('single_host', hostid=host[0]) }}">details</a></td>
            </tr>
            {% endfor %}
        </table>      
    </div>

    <div class="col-md-3"></div>

  </div>
</div>
{% endblock %}
